{
  "name": "awsdemonstrationstep01",
  "version": "1.0.0",
  "description": "AWSの水平スケーリングを具体的に示すためのアプリケーション",
  "main": "index.js",
  "scripts": {
    "___pregenerate": "del ./generate/*",
    "generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./generate --grpc_out=grpc_js:./generate --ts_out=grpc_js:./generate -I ./src/proto ./src/proto/*.proto",
    
    "dev": "npm run dev:server & npm run dev:bff",
    "dev:server": "nodemon src/server/index.ts",
    "dev:bff": "nodemon src/client/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.11.1",
    "@types/express": "^4.17.21",
    "@types/google-protobuf": "^3.15.12",
    "express": "^4.19.2",
    "google-protobuf": "^3.21.4"
  },
  "devDependencies": {
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.12.4",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
